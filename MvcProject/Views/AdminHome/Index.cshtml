@using MvcProject.Models;
@model List<DOCTOR>

<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">ÇAĞRI HASTANESİ</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/AdminHome/Index/">Doktorlar</a></li>
                        <li><a href="/AdminHomePatient/Index/">Hastalar</a></li>
                        <li><a href="/AdminHomeAppointment/Index/">Randevu</a></li>
                        <li><a href="/AdminHomeFeedback/Index/">Geri Bildirim</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "AdminLogin", FormMethod.Post))
                        {
                            <input type="submit" value="ÇIKIŞ YAP" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />
    <br />

    @using (Html.BeginForm("Index", "AdminHome", FormMethod.Get))
    {
        <p>
            <center>
            <b></b>Bölüm @Html.TextBox("p")
            <b></b>Adı @Html.TextBox("p2")
            <br />
            <br />
            <input type="submit" class="btn btn-primary" value="Ara" />
            </center>
        </p>
    }
    <br />

    <table class="table table-bordered">
        <tr>
            <th>Doktor ID</th>
            <th>Doktor Adı</th>
            <th>Doktor Soyadı</th>
            <th>Doktor Bölümü</th>
        </tr>

        <tbody>
            @foreach (var dctr in Model)
            {
                <tr>
                    <td>@dctr.doctorID</td>
                    <td>@dctr.doctorName</td>
                    <td>@dctr.doctorSurname</td>
                    <td>@dctr.department</td>
                    <td><a href="/AdminHome/DeleteDoctor/@dctr.doctorID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/AdminHome/GetDoctor/@dctr.doctorID" class="btn btn-success">GÜNCELLE</a></td>
                </tr>

                <tr>
                    <th>Biografi</th>
                </tr>
                <tr>
                    <td>@dctr.biography</td>
                </tr>
            }
        </tbody>
    </table>

    <br />

    <a href="/AdminHome/AddDoctor/" class="btn btn-primary">DOKTOR EKLE</a>

</body>
</html>
