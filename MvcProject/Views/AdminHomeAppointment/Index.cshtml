@using MvcProject.Models;
@model List<APPOINTMENT>

<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">ÇAĞRI HASTANESİ</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/AdminHome/Index/">Doktorlar</a></li>
                        <li><a href="/AdminHomePatient/Index/">Hastalar</a></li>
                        <li><a href="/AdminHomeAppointment/Index/">Randevu</a></li>
                        <li><a href="/AdminHomeFeedback/Index/">Geri Bildirim</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "AdminLogin", FormMethod.Post))
                        {
                            <input type="submit" value="ÇIKIŞ YAP" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-bordered">
        <tr>
            <th>Randevu ID</th>
            <th>Doktor Adı</th>
            <th>Doktor Soyadı</th>
            <th>Hasta Adı</th>
            <th>Hasta Soyadı</th>
            <th>Bölüm</th>
            <th>Randevu Tarihi</th>
            <th>Randevu Saati</th>
        </tr>

        <tbody>
            @foreach (var appn in Model)
            {
                <tr>
                    <td>@appn.appointmentID</td>
                    <td>@appn.doctorName</td>
                    <td>@appn.doctorSurname</td>
                    <td>@appn.patientName</td>
                    <td>@appn.patientSurname</td>
                    <td>@appn.department</td>
                    <td>@appn.appointmentDate</td>
                    <td>@appn.appointmentHour</td>
                </tr>
            }
        </tbody>
    </table>

    <br />

</body>
</html>
