@using MvcProject.Models;
@model List<APPOINTMENT>

<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">ÇAĞRI HASTANESİ</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/PatientHome/Index/">Randevu Al</a></li>
                        <li><a href="/PatientHomeContact/Index/">İletişim</a></li>
                        <li><a href="/PatientHomeFeedback/Index/">Geri Bildirim</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "PatientLogin", FormMethod.Post))
                        {
                            <input type="submit" value="ÇIKIŞ YAP" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />
    <br />

    <title> Çağrı Hastanesi </title>
    <style type="text/css">
        #metin {
            text-align: justify;
            width: 1200px;
            word-wrap: break-word;
            margin: 0px auto;
            background: white;
            padding-top: 15px;
            padding-bottom: 15px;
            padding-left: 15px;
            padding-right: 15px;
            border-style: solid;
            border-width: 2px;
            border-color: #8fc1da;
            line-height: 200%;
        }
    </style>

    <div id="metin">
        <center><font style="font-family:Trebuchet MS; font-size:48px; color:#e80729;">RANDEVU AL</font></center>
        <center><img src="~/Images/appointment.jpg"></center>
        <font style="font-family:Arial; font-size:18px; color:black;">
            Aşağıdaki tablo doktorların tüm randevularını listelemektedir. Lütfen sizin için uygun bir zamanda randevu alınız.
        </font>
        <br />
        <br />

        @using (Html.BeginForm("Index", "PatientHome", FormMethod.Get))
        {
            <p>
                <center>
                    <b></b>Doktor Adı Ara @Html.TextBox("p")
                    <b></b>Bölüm Ara @Html.TextBox("p2")
                    <b></b>Tarih Ara @Html.TextBox("p3")
                    <br />
                    <br />
                    <input type="submit" class="btn btn-success" value="Ara" />
                </center>
            </p>
        }
        <br />

        <table class="table table-bordered">
            <tr>
                <th>Doktor ID</th>
                <th>Doktor Adı</th>
                <th>Doktor Soyadı</th>
                <th>Bölüm</th>
                <th>Randevu Tarihi</th>
                <th>Randevu Saati</th>
            </tr>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.doctorID</td>
                        <td>@appointment.doctorName</td>
                        <td>@appointment.doctorSurname</td>
                        <td>@appointment.department</td>
                        <td>@appointment.appointmentDate</td>
                        <td>@appointment.appointmentHour</td>
                    </tr>
                }
            </tbody>
        </table>
        <center><a href="/PatientHome/AddAppointments/" class="btn btn-primary">Randevu Ekle</a></center>
    </div>
</body>
</html>
