@model MvcProject.Models.APPOINTMENT

<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">ÇAĞRI HASTANESİ</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="#">Doktorlar</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "DoctorLogin", FormMethod.Post))
                        {
                            <input type="submit" value="ÇIKIŞ YAP" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />

    @using (Html.BeginForm("UpdateApp", "DoctorAppointments", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.appointmentDate, "Randevu Tarihi")
            @Html.TextBoxFor(m => m.appointmentDate, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.appointmentHour, "Randevu Saati")
            @Html.TextBoxFor(m => m.appointmentHour, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-warning">Doktoru Güncelle</button>
        </div>
    }
</body>
</html>
